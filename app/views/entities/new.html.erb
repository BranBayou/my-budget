<div>
  <%= link_to group_entities_path do %>
    <%= image_tag('back.png', class: 'w-6') %>
  <% end %>
  <h1 class="">Create New Transaction</h1>
  <%= form_with model: @entity, url: group_entities_path do |form| %>
    <div class="">
      <%= form.label :name , "Name", class: '' %>
      <%= form.text_field :name, class: '', required: true  %>
    </div>
    <div class="">
      <%= form.label :amount , "Amount" , class: '' %>
      <%= form.text_field :amount, class: '', required: true  %>
    </div>
    <%= form.submit "Save", class: '' %>
  <% end %>
</div>