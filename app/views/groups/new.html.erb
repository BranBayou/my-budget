<div>
  <span><%= link_to 'Back', groups_path, class: '' %></span>
  <h1 class="">Create your Category here.</h1>
  <%= form_with model: @group, url: groups_path do |form| %>
    <div class="form-group">
      <%= form.label :name , "Name", class: '' %>
      <%= form.text_field :name, class: '', required: true %>
    </div>
    <div class="">
      <%= form.label :icon , "icon" , class: '' %>
      <%= form.text_field :icon, class: '', required: true  %>
    </div>
    <%= form.submit "Save", class: '' %>
  <% end %>
</div>