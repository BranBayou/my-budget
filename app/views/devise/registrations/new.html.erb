<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col justify-center items-center h-screen bg-gradient-to-b from-blue-500 to-lime-500' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Username', class: "p-2 m-2 rounded-xl" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "p-2 m-2 rounded-xl" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "p-2 m-2 rounded-xl" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-2 m-2 rounded-xl" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "text-white text-center bg-[#3778c2] hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 w-full" %>
  </div>
  <%= render "devise/shared/links" %>

<% end %>

